<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imgThumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_filled_folder"
        android:layout_marginStart="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgThumbnail"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/folderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Folder Name"
            android:maxLines="1"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:fontFamily="@font/gill_sans_mt"/>

        <TextView
            android:id="@+id/folderPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Folder Path"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:fontFamily="@font/gill_sans_mt"/>

        <TextView
            android:id="@+id/noOfFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 videos"
            android:textColor="@color/black"
            android:fontFamily="@font/gill_sans_mt"/>

    </LinearLayout>


</RelativeLayout>